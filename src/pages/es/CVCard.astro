---
import Card from '../Card.astro'
import { Button } from '@/components/ui/_button'

const PDF = '/CV_orange.pdf'
// Eliminar esta l√≠nea ya que no se usa
// const PDFImage = '/me.png'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4" title="CV">
  <div class="mt-4 flex w-full justify-center">
    <div
      class="card card-compact md:w-112 lg:w-128 w-96 gap-2 border-[oklch(var(--p))] transition-all"
    >
      <figure>
        <object data={PDF} type="application/PDF" width="100%"></object>
      </figure>
      <div class="mt-4 flex flex-col gap-2">
        <p class="text-sm text-muted-foreground" style="text-align: center;">
          Visualiza y descarga mi CV haciendo clic abajo
        </p>
        <div class="card-actions mt-2 flex w-full items-center justify-center">
          <a target="_blank" href={PDF}>
            <Button> Descargar </Button>
          </a>
        </div>
      </div>
    </div>
  </div>
</Card>
