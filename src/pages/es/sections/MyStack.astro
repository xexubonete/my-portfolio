---
import Card from '../Card.astro'
import TimeZoneV2 from './_TimeZoneCardV2'
import { buttonVariants } from '../ui/_button'
import { LINKS } from '../../../lib/constants'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2" title="Projectos">
  <p class="flex">
    <div class="text-right flex">
      <a class={`text-sm ${buttonVariants({ variant: 'destructive', size: 'sm' })}`} style="margin-top:20px;margin-left:1.25em;" href="https://github.com/xexubonete/pilot-api" target="_blank" rel="noreferrer">
        pilot-api
      </a>
    </div>
    <div class="text-right flex" style="align-items: center; justify-items: center;">
        <a class={`text-sm ${buttonVariants({ variant: 'destructive', size: 'sm' })}`} style="margin-top:-28px;margin-left:8.3em;" href="https://github.com/xexubonete/mediator-api" target="_blank" rel="noreferrer">
          mediator-api
          </a>
    </div>
    <div class="text-right flex" style="align-items: center; justify-items: center;">
      <a class={`text-sm ${buttonVariants({ variant: 'destructive', size: 'sm' })}`} style="margin-top:10px;" href="https://github.com/xexubonete/dapper-api" target="_blank" rel="noreferrer">
        dapper-api
        </a>    
        <a class={`text-sm myportfolio ${buttonVariants({ variant: 'outline', size: 'sm' })}`} style="margin-top:9px;margin-left:1.25em;" href="https://github.com/xexubonete/my-portfolio" target="_blank" rel="noreferrer">
          my-portfolio
          </a>
    </div>
  </p>
</Card>
