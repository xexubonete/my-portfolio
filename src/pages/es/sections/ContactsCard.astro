---
import { buttonVariants } from '../ui/_button'

import Card from '../Card.astro'
import { LINKS } from '../../../lib/constants'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-xl font-bold text-foreground">
        Si te gusta lo que ves, contáctame!
      </h1>
    </header>
    <address class="mt-4 flex w-fit flex-col">
      <p class="text-xm  align-baseline">
        <a class={buttonVariants({ variant: 'secondary' })} style="margin:0px" href="mailto:xexubonete@gmail.com" target="_blank" rel="noreferrer">
          📫xexubonete@gmail.com <br />
        </a>
        <button id="copy-email" class="ml-2" aria-label="Copiar correo">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M9 16h6M8 8h.01M12 8h.01M16 8h.01M9 20h6M8 4h.01M12 4h.01M16 4h.01" />
          </svg>
        </button>        <a style="margin:2px" class={buttonVariants({ variant: 'secondary' })}
        href="https://www.google.com/maps/place/Alicante+(Alacant),+Alicante/@38.3578408,-0.4725241,13z/data=!3m1!4b1!4m6!3m5!1s0xd6235da3b9dab4b:0x1d7da872ac0b81e3!8m2!3d38.3457685!4d-0.4909444!16zL20vMHpjNg?entry=ttu&g_ep=EgoyMDI0MDgyMS4wIKXMDSoASAFQAw%3D%3D"
        target="_blank"
        rel="noreferrer"
        >
        📍Alicante, España
        </a>

        <a class={buttonVariants({ variant: 'secondary' })} style="margin:2px" href="tel:+34722243881" target="_blank" rel="noreferrer">
        🤙 Llámame
        </a>
        <a class={buttonVariants({ variant: 'secondary' })} class="text-sm" style="margin:2px" href={LINKS.linkedin} target="_blank">🔗LinkedIn</a><br>
        <a class={buttonVariants({ variant: 'secondary' })} class="text-sm" style="margin:0px" href={LINKS.github} target="_blank">🎖️Github</a>
      </p>
    </address>
    <div class="flex h-full w-full flex-col">
      <div>
        <img
          width="90"
          height="90"
          src="/me_chillin.png"
          class="pointer-events-none absolute bottom-[-20px] right-[-110px] z-[-1] max-h-[300px] w-auto select-none opacity-50 md:relative md:bottom-auto md:right-auto md:z-auto md:opacity-100"
          alt="memoji of xexu taking easy"
        />
      </div>
    </div>
  </div>
</Card>
<script>
  function copyToClipboard() {
    const email = "xexubonete@gmail.com";
    navigator.clipboard.writeText(email).then(() => {
      alert('Copiado!');
    }).catch((err) => {
      console.error('Error al copiar al portapapeles: ', err);
    });
  }

  document.getElementById('copy-email').addEventListener('click', copyToClipboard);

  
</script>